<odoo>
    <record id="view_dev_balance_sheet_report_form" model="ir.ui.view">
        <field name="name">view.dev.balance.sheet.report.form</field>
        <field name="model">dev.balance.sheet.report</field>
        <field name="arch" type="xml">
         <form string="Balance Sheet Report">
            <group>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="target_moves" widget="radio"/>
                    <field name="company_id" required="1"/>
                    <field name="is_comparison"/>
                </group>    
            </group>
            <group attrs="{'invisible':[('is_comparison','!=',True)]}">
                <group>
                    <field name="com_start_date" attrs="{'required':[('is_comparison','=',True)]}"/>
                </group>
                <group>
                    <field name="com_end_date" attrs="{'required':[('is_comparison','=',True)]}"/>
                </group>
            </group>
            
            <footer>
        		<button string="Print PDF" name="print_balance_sheet_report" type="object" class="oe_highlight"/> or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
         </form>
       </field>
    </record>
    
	<!--WIZARD ACTION-->
    <record id="action_balance_sheet_report" model="ir.actions.act_window">
        <field name="name">Balance Sheet Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dev.balance.sheet.report</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_dev_balance_sheet_report_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

	<!--MENU WHICH OPENS WIZARD-->
    <menuitem id="menu_balance_sheet_report" name="Balance Sheet Report" parent="menu_dev_account_reports" action="action_balance_sheet_report" sequence="2"/>

</odoo>
